{
  "name": "favorite-git-commands",
  "displayName": "Favorite CLI Commands",
  "description": "Keep a list of favorite CLI commands in the sidebar and run them with a click.",
  "version": "0.0.7",
  "publisher": "AlexeyEppelman",
  "author": {
    "name": "Alexey Eppelman"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexEp/vs-extention-favorite-commands.git"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:favoriteGitCommandsView"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "favorite-git-commands-container",
          "title": "CLI Favorites",
          "icon": "$(star-full)"
        }
      ]
    },
    "views": {
      "favorite-git-commands-container": [
        {
          "id": "favoriteGitCommandsView",
          "name": "Favorite Commands",
          "contextualTitle": "CLI Favorites"
        }
      ]
    },
    "commands": [
      {
        "command": "favorite-git-commands.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "favorite-git-commands.addFolder",
        "title": "Add Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "favorite-git-commands.renameFolder",
        "title": "Rename Folder",
        "icon": "$(edit)"
      },
      {
        "command": "favorite-git-commands.deleteFolder",
        "title": "Delete Folder",
        "icon": "$(trash)"
      },
      {
        "command": "favorite-git-commands.addCommand",
        "title": "Add Command",
        "icon": "$(add)"
      },
      {
        "command": "favorite-git-commands.editCommand",
        "title": "Edit Command",
        "icon": "$(edit)"
      },
      {
        "command": "favorite-git-commands.deleteCommand",
        "title": "Delete Command",
        "icon": "$(trash)"
      },
      {
        "command": "favorite-git-commands.runCommand",
        "title": "Run Command",
        "icon": "$(play)"
      },
      {
        "command": "favorite-git-commands.pasteCommand",
        "title": "Paste Command",
        "icon": "$(clippy)"
      },
      {
        "command": "favorite-git-commands.importCommands",
        "title": "Import from JSON",
        "icon": "$(json)"
      },
      {
        "command": "favorite-git-commands.exportCommands",
        "title": "Export to JSON",
        "icon": "$(export)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "favorite-git-commands.refresh",
          "when": "view == favoriteGitCommandsView",
          "group": "navigation@1"
        },
        {
          "command": "favorite-git-commands.addFolder",
          "when": "view == favoriteGitCommandsView",
          "group": "navigation@2"
        },
        {
          "command": "favorite-git-commands.importCommands",
          "when": "view == favoriteGitCommandsView",
          "group": "navigation@3"
        },
        {
          "command": "favorite-git-commands.exportCommands",
          "when": "view == favoriteGitCommandsView",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "favorite-git-commands.addCommand",
          "when": "view == favoriteGitCommandsView && viewItem == folderItem",
          "group": "inline@1"
        },
        {
          "command": "favorite-git-commands.renameFolder",
          "when": "view == favoriteGitCommandsView && viewItem == folderItem",
          "group": "inline@2"
        },
        {
          "command": "favorite-git-commands.deleteFolder",
          "when": "view == favoriteGitCommandsView && viewItem == folderItem",
          "group": "inline@3"
        },
        {
          "command": "favorite-git-commands.runCommand",
          "when": "view == favoriteGitCommandsView && viewItem == commandItem",
          "group": "inline@1"
        },
        {
          "command": "favorite-git-commands.pasteCommand",
          "when": "view == favoriteGitCommandsView && viewItem == commandItem",
          "group": "inline@2"
        },
        {
          "command": "favorite-git-commands.editCommand",
          "when": "view == favoriteGitCommandsView && viewItem == commandItem",
          "group": "inline@3"
        },
        {
          "command": "favorite-git-commands.deleteCommand",
          "when": "view == favoriteGitCommandsView && viewItem == commandItem",
          "group": "inline@4"
        }
      ]
    },
    "configuration": {
      "title": "Favorite CLI Commands",
      "properties": {
        "favoriteGitCommands.folders": {
          "type": "array",
          "default": [
            {
              "name": "default",
              "commands": [
                {
                  "label": "Git Status",
                  "command": "git status"
                },
                {
                  "label": "Git Pull (Rebase)",
                  "command": "git pull --rebase"
                }
              ]
            }
          ],
          "description": "An array of folders containing favorite CLI commands.",
          "items": {
            "type": "object",
            "title": "Folder",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the folder."
              },
              "commands": {
                "type": "array",
                "description": "The commands within this folder.",
                "items": {
                  "type": "object",
                  "title": "Command",
                  "properties": {
                    "label": {
                      "type": "string",
                      "description": "The friendly name for the command (e.g., 'Git Status')."
                    },
                    "command": {
                      "type": "string",
                      "description": "The actual CLI command to run (e.g., 'git status')."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "eslint": "^8.20.0"
  }
}



